<Application x:Class="DMCoreGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DMCoreGUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Panel Button Style-->
        <Style x:Key="LeftPanelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!--Page Format Style-->
        <Style x:Key="PageFormats" TargetType="{x:Type Page}">
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="535"/>
        </Style>
    </Application.Resources>
</Application>
