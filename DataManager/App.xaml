<Application x:Class="DataManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Panel Button Style-->
        <Style x:Key="LeftPanelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#51555b"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="PageFormats" TargetType="{x:Type Page}">
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="535"/>
        </Style>
    </Application.Resources>
</Application>
