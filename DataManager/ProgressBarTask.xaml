<Window x:Class="DataManager.ProgressBarTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataManager"
        mc:Ignorable="d"
        Title="ProgressBarTask" Height="100" Width="300">
    <Canvas Background="DimGray" Width="300" Height="100">
        <ProgressBar Height="25" Canvas.Left="20" Canvas.Top="33" Width="190" Minimum="0" Name="pbstatus" IsIndeterminate="True" />
        <Button x:Name="buttonCancel" Content="Cancel" Canvas.Left="224" Canvas.Top="33" Width="50" Height="25" Click="CancelButton_Click" />
        <TextBlock x:Name="workStatus" Height="15" Width="150" Canvas.Left="23" RenderTransformOrigin="0.488,-0.539" Text="Work in Progress..." Canvas.Top="5" />

    </Canvas>
</Window>
